<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama:" />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewNama"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewJender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextNama"
        android:layout_below="@+id/editTextNama"
        android:layout_marginTop="25dp"
        android:text="Jender:" />

    <EditText
        android:id="@+id/editTextTgLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTgLahir"
        android:layout_below="@+id/textViewTgLahir"
        android:ems="10" />

    <CheckBox
        android:id="@+id/checkBoxPria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewJender"
        android:layout_alignBottom="@+id/textViewJender"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewJender"
        android:text="Pria" />

    <CheckBox
        android:id="@+id/checkBoxWanita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewJender"
        android:layout_alignBottom="@+id/textViewJender"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/textViewJender"
        android:text="Wanita" />

    <TextView
        android:id="@+id/textViewTgLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewJender"
        android:layout_below="@+id/checkBoxPria"
        android:layout_marginTop="17dp"
        android:text="Tanggal Lahir (yyyy/mm/dd):" />

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextTgLahir"
        android:text="Simpan" />

    <ListView
        android:id="@+id/listViewDb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSimpan"
        android:layout_below="@+id/buttonSimpan"
        android:layout_marginTop="75dp" >
    </ListView>

</RelativeLayout>