<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/custom_theme_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#003366</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#0091EA</item>
    </style>

    <style name="Font_sans_normal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_sans_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_sans_italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_normal">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#03A9F4</item>
    </style>

</resources>
