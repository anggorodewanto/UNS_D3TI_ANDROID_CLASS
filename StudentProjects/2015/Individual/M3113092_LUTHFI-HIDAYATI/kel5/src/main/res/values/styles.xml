<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Font_sans_normal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#1d15ff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_sans_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ff7b0b</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_sans_italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#09ff13</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_normal">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#ff0e6b</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font_mono_italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#ffb00c</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button">
        <item name="android:background">#03a9f4</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
