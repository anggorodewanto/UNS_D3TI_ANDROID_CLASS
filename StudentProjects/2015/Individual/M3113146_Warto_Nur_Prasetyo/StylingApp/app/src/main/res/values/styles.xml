<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- dibuat dua versi untuk menanggulangi beda versi-->
        <item name="android:windowBackground">@drawable/grad</item>
        <item name="actionBarStyle">@style/actionbar</item>
        <item name="android:actionBarStyle">@style/actionbar</item>
    </style>
    <style name="actionbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/actionbar</item>
        <item name="background">@color/actionbar</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- dibuat dua versi untuk menanggulangi beda versi-->
        <item name="android:windowBackground">@drawable/grad2</item>
        <item name="actionBarStyle">@style/actionbar2</item>
        <item name="android:actionBarStyle">@style/actionbar2</item>
    </style>
    <style name="actionbar2" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/actionbar2</item>
        <item name="background">@color/actionbar2</item>
    </style>

</resources>
